<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 1. HEADER CỐ ĐỊNH -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="#FFFFFF"
        android:paddingTop="12dp">

        <!-- Dòng 1: Logo Play + Thông báo + Avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Logo Tam giác -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ch_play" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <!-- Chuông thông báo -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@android:drawable/ic_popup_reminder"
                app:tint="#5F6368"/>

            <!-- Avatar tròn -->
            <androidx.cardview.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#009688">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="K"
                    android:textColor="#FFF"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Dòng 2: Tabs (For you, Top charts...) -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                >

                <!-- Tab Active -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For you"
                    android:textColor="#01875F"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:background="@drawable/bg_tab_indicator"/> <!-- Cần tạo drawable gạch chân -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top charts"
                    android:textColor="#5F6368"
                    android:textSize="16sp"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other devices"
                    android:textColor="#5F6368"
                    android:textSize="16sp"
                    android:padding="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kids"
                    android:textColor="#5F6368"
                    android:textSize="16sp"
                    android:padding="12dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Đường kẻ mờ dưới Header -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>
    </LinearLayout>

    <!-- 2. PHẦN NỘI DUNG CHÍNH (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@id/bottomNav"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

    <!-- 3. FOOTER (Bottom Navigation) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Item 1: Games -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_input_get"
                app:tint="#5F6368"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Games"
                android:textSize="12sp"
                android:textColor="#5F6368"/>
        </LinearLayout>

        <!-- Item 2: Apps (Active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_nav_active"
                android:src="@android:drawable/ic_menu_myplaces"
                android:padding="4dp"
                app:tint="#000000"/> <!-- Cần tạo drawable nền xanh nhạt -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apps"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#01875F"/>
        </LinearLayout>

        <!-- Item 3: Search -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:src="@android:drawable/ic_menu_search"
                app:tint="#5F6368"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="12sp"
                android:textColor="#5F6368"/>
        </LinearLayout>

        <!-- Item 4: Books -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_input_get"
                app:tint="#5F6368"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books"
                android:textSize="12sp"
                android:textColor="#5F6368"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
